{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "target": "es2019",
    "module": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~branches": ["private/libs/cross-domain/features/branches/src/index.ts"],
      "~addons/*": ["private/libs/addons/src/*", "libs/addons/src/*"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
