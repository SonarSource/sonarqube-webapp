{
  "extends": "eslint:recommended",

  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },

  "env": {
    "browser": true,
    "es6": true,
    "mocha": true,
    "node": true
  },

  "globals": {
    "define": true,
    "require": true,
    "numeral": true,
    "key": true,
    "d3": true,
    "baseUrl": true,
    "t": true,
    "tp": true
  },

  "parser": "babel-eslint",

  "plugins": [
    "react",
    "mocha"
  ],

  "rules": {
    "quotes": [ 2, "single", "avoid-escape" ],
    "react/jsx-uses-react": 1
  }
}
