{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "master",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals",
      "!{projectRoot}/build/**/*"
    ],
    "production": [
      "default",
      "!{projectRoot}/jest.config.ts",
      "!{projectRoot}/config/jest/*",
      "!{projectRoot}/**/__tests__/**/*-(test|smoke|it).(j|t)sx?",
      "!{projectRoot}/**/__tests__/**/*.snap"
    ],
    "sharedGlobals": []
  },
  "targetDefaults": {
    "build": {},
    "build-analyze": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "env": {
          "BUNDLE_ANALYSIS": "true"
        }
      },
      "parallelism": true
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": true
      },
      "parallelism": true
    },
    "dep-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "node ./config/validate-package-json.js"
      },
      "inputs": [
        "{projectRoot}/package.json"
      ],
      "cache": true,
      "parallelism": true
    },
    "format-check": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "yarn prettier --check \"src/**/*.{js,ts,tsx,css}\""
      },
      "inputs": [
        "default",
        "^default"
      ],
      "cache": true,
      "parallelism": true
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "command": "yarn"
      },
      "inputs": [
        "{projectRoot}/yarn.lock",
        "{projectRoot}/package.json"
      ],
      "outputs": [
        "{projectRoot}/node_modules"
      ],
      "cache": true
    },
    "lint": {
      "options": {
        "command": "eslint --ext js,ts,tsx,snap --quiet src"
      }
    },
    "lint-report": {
      "options": {
        "command": "eslint --ext js,ts,tsx,snap --format json --output-file build/reports/eslint-report/eslint-report.json src"
      },
      "outputs": [
        "{projectRoot}/build/reports/eslint-report/**"
      ]
    },
    "start": {
      "dependsOn": [
        "install"
      ]
    },
    "test*": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{projectRoot}",
        "parallel": false
      },
      "inputs": [
        "default",
        "^default"
      ],
      "cache": true,
      "parallelism": true
    },
    "test-coverage-merge": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "{workspaceRoot}",
        "commands": [
          "ls {projectRoot}/build/reports/coverage",
          "yarn nyc merge {projectRoot}/build/reports/coverage {projectRoot}/build/reports/merged-coverage/coverage-final.json",
          "yarn nyc report -t {projectRoot}/build/reports/merged-coverage --report-dir {projectRoot}/build/reports/coverage --reporter=lcovonly"
        ],
        "parallel": false
      },
      "inputs": [
        "{projectRoot}/build/reports/coverage/*"
      ],
      "outputs": [
        "{projectRoot}/build/reports/coverage/coverage-final.json"
      ],
      "cache": true,
      "parallelism": true
    },
    "ts-check": {}
  },
  "plugins": [
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint"
      }
    },
    {
      "plugin": "@nx/eslint/plugin",
      "options": {
        "targetName": "lint-report"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "start",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "ts-check"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    }
  ]
}
